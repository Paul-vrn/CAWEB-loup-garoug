{
  "name": "api",
  "scripts": {
    "dev": "pnpm with-env tsx watch src/index.ts",
    "build": "pnpm with-env esbuild src/index.ts --bundle --platform=node --outfile=dist/index.js --external:express --external:cors",
    "start": "pnpm with-env node dist/index.js",
    "lint": "eslint src",
    "type-check": "tsc",
    "with-env": "dotenv -e ../../.env --"
  },
  "dependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/node-schedule": "^2.1.0",
    "bcrypt": "^5.1.0",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.0",
    "node-schedule": "^2.1.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jsonwebtoken": "^9.0.1",
    "database": "*",
    "dotenv-cli": "^7.2.1",
    "esbuild": "^0.17.11",
    "tsconfig": "workspace:*",
    "tsx": "^3.12.3",
    "types": "workspace:^1.0.0",
    "typescript": "^4.9.5"
  }
}
