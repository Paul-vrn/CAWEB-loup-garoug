{
  "name": "api",
  "scripts": {
    "dev": "pnpm with-env tsx watch src/index.ts",
    "build": "pnpm with-env esbuild src/index.ts --bundle --platform=node --outfile=dist/index.js --external:express --external:cors",
    "start": "pnpm with-env node dist/index.js",
    "lint": "eslint src",
    "lint:fix": "pnpm lint --fix",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "clean": "git clean -xdf .expo .turbo node_modules",
    "type-check": "tsc",
    "with-env": "dotenv -e ../../.env --"
  },
  "dependencies": {
    "@types/node-cron": "^3.0.7",
    "bcrypt-ts": "^3.0.0",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.0",
    "node-cron": "^3.0.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.1",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/supertest": "^2.0.12",
    "database": "*",
    "dotenv-cli": "^7.2.1",
    "esbuild": "^0.17.11",
    "eslint-config-wolfo": "*",
    "jest": "^29.5.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "tsconfig": "workspace:*",
    "tsx": "^3.12.3",
    "types": "*",
    "typescript": "^4.9.5"
  }
}
